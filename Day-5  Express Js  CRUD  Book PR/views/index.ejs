<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #5a5af0;
        }

        /* Form Styles */
        form {
            width: 50%;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        form input {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        form button {
            width: 100%;
            padding: 10px;
            background: #5a5af0;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        form button:hover {
            background: #3f3fc7;
        }

        /* Table Styles */
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        table th, table td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        table th {
            background-color: #5a5af0;
            color: white;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        table td a {
            color: #5a5af0;
            text-decoration: none;
            font-weight: bold;
        }

        table td a:hover {
            text-decoration: underline;
        }

        table button {
            background: none;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 16px;
        }

        table button:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Book Store</h1>

    <form action="/addData" method="post">
        <input type="text" placeholder="Enter book Name" name="name" required>
        <input type="text" placeholder="Enter author" name="author" required>
        <input type="text" placeholder="Enter price" name="price" required>
        <button type="submit">Add Data</button>
    </form>

    <table>
        <tr>
            <th>No.</th>
            <th>Book Name</th>
            <th>Author</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>

        <% book.map((e, i) => { %>
            <tr>
                <td><%= i + 1 %></td>
                <td><%= e.bookName %></td>
                <td><%= e.author %></td>
                <td><%= e.price %></td>
                <td>
                    <button><a href="/editData/<%=e.id %>">Edit</a></button>
                    <button><a href="/deleteData?id=<%=e.id %>">Delete</a></button>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
